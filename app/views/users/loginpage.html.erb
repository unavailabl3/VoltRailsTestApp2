<div class="sidenav">
         <div class="login-main-text">
            <h2>Application<br> Login Page</h2>
            <p>Login from here to access API.</p>
         </div>
      </div>
      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">
               <%= form_for :user, url: "/users/login" do |form| %>
                  <div class="form-group">
                     <label for="email">Email address</label>
                     <%= email_field(:user, :address, class: "form-text form-control", :value => "example@mail.com") %>
                  </div>
                  <div class="form-group">
                    <label for="password">Password</label>
                    <%= password_field_tag(:password, nil, class: "form-control", :value => "example") %>
                  </div>
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                  <%= form.submit  "Login", class:"btn btn-primary"%>
               <% end %>
            </div>
         </div>
      </div>
